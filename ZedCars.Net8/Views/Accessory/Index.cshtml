@using ZedCars.Net8.ViewModels.HomeCont 
@model ZedCars.Net8.ViewModels.HomeCont.AccessoryIndexViewModel

@{
    ViewData["Title"] = "Accessories";
}

<div class="ManageAcc-header p-4">
    <h1>Accessories</h1>
    <p class="lead">Manage your accessories by filters</p>
    <div class="action">
        <!-- Filter by Category -->
        <form method="get" class="mb-4 d-flex align-items-center mb-3 flex-wrap gap-2">
            <input type="hidden" name="page" value="1" />
            <div class="row g-2 align-items-center" style="max-width: 350px;">
                <div class="col">
                    <label for="category" class="form-label visually-hidden">Category</label>
                    <select asp-items="Model.Categories" name="category" id="category" class="form-select" onchange="this.form.submit()">
                        <option value="">All Categories</option>
                    </select>
                </div>
            </div>
            <a asp-action="Create" class="btn btn-primary">Create New</a>
        </form>
    </div>
</div>

<div class="container my-4">
    
    <!-- Responsive Table -->
    <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle text-center">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Accessories.First().AccessoryId)</th>
                    <th>@Html.DisplayNameFor(model => model.Accessories.First().Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Accessories.First().Category)</th>
                    <th>@Html.DisplayNameFor(model => model.Accessories.First().Price)</th>
                    <th>@Html.DisplayNameFor(model => model.Accessories.First().StockQuantity)</th>
                    <th>@Html.DisplayNameFor(model => model.Accessories.First().Manufacturer)</th>
                    <th>@Html.DisplayNameFor(model => model.Accessories.First().IsActive)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Accessories.Any())
                {
                    <tr>
                        <td colspan="8" class="text-center text-muted">No accessories found.</td>
                    </tr>
                }
                else
                {
                    @foreach (var item in Model.Accessories)
                    {
                        <tr>
                            <td>@Html.DisplayFor(m => item.AccessoryId)</td>
                            <td>@Html.DisplayFor(m => item.Name)</td>
                            <td>@Html.DisplayFor(m => item.Category)</td>
                            <td>@Html.DisplayFor(m => item.Price)</td>
                            <td>@Html.DisplayFor(m => item.StockQuantity)</td>
                            <td>@Html.DisplayFor(m => item.Manufacturer)</td>
                            <td>
                                @if (item.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Inactive</span>
                                }
                            </td>
                            <td class="d-flex justify-content-center gap-1 flex-wrap">
                                <a asp-action="Edit" asp-route-id="@item.AccessoryId" class="btn btn-sm btn-warning">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.AccessoryId" class="btn btn-sm btn-info">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.AccessoryId" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
    <!-- Pagination -->
    @if (Model.TotalPages > 1)
    {
        <nav aria-label="Inventory pagination" class="mt-4">
            <ul class="pagination justify-content-end">
                <!-- Previous Button -->
                <li class="page-item @(Model.CurrentPage <= 1 ? "disabled" : "")">
                    <a class="page-link"
                       href="@Url.Action("Index", new { category = Model.SelectedCategory, page = Model.CurrentPage - 1 })"
                       aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>

                <!-- Page Numbers -->
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a class="page-link"
                           href="@Url.Action("Index", new { category = Model.SelectedCategory, page = i })">
                            @i
                        </a>
                    </li>
                }

                <!-- Next Button -->
                <li class="page-item @(Model.CurrentPage >= Model.TotalPages ? "disabled" : "")">
                    <a class="page-link"
                       href="@Url.Action("Index", new { category = Model.SelectedCategory, page = Model.CurrentPage + 1 })"
                       aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Pagination Info -->
        <div class="text-center text-muted mt-2">
            <small>
                Showing @((Model.CurrentPage - 1) * Model.PageSize + 1) to
                @(Math.Min(Model.CurrentPage * Model.PageSize, Model.TotalAccessories))
                of @Model.TotalAccessories accessories
            </small>
        </div>
    }
</div>

<style>
    .ManageAcc-header{
        background: linear-gradient(135deg, #2c3e50 0%, #1a252f 100%);
        color: white;
    }
    .btn {
        border-radius: 4px;
        text-decoration: none;
        font-weight: bold;
    }
    
    .btn-primary {
        background: #3498db;
        color: white;
    }
    
    .btn-secondary {
        background: rgba(255, 255, 255, 0.2);
        color: white;
    }
    .action{
        margin-top: 20px;
        display: flex;
        gap: 10px;
    }
</style>
