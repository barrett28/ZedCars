@model ZedCars.Net8.Models.Accessory

@{
    ViewData["Title"] = "Accessory Details";
}

<h1>Accessory Details</h1>
<hr />
<dl class="row">
    <dt class="col-sm-2">ID</dt>
    <dd class="col-sm-10">@Model.AccessoryId</dd>

    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Category</dt>
    <dd class="col-sm-10">@Model.Category</dd>

    <dt class="col-sm-2">Price</dt>
    <dd class="col-sm-10">@Model.Price</dd>

    <dt class="col-sm-2">Stock</dt>
    <dd class="col-sm-10">@Model.StockQuantity</dd>

    <dt class="col-sm-2">Manufacturer</dt>
    <dd class="col-sm-10">@Model.Manufacturer</dd>

    <dt class="col-sm-2">Active</dt>
    <dd class="col-sm-10">@Model.IsActive</dd>
</dl>

<p>
    <a asp-action="Edit" asp-route-id="@Model.AccessoryId" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</p>
