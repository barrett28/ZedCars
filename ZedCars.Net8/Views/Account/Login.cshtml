@{
    ViewData["Title"] = "Login";
}

<div class="login-container">
    <div class="login-form">
        <h1>Sign In</h1>
        <p class="subtitle">Access your ZedCars account</p>
        
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                @TempData["ErrorMessage"]
            </div>
        }
        
        <form asp-action="Login" method="post">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label for="username">Username</label>
                <input type="text" id="username" name="username" class="form-control" required />
            </div>
            
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" class="form-control" required />
            </div>
            
            <div class="form-group remember-me">
                <input type="checkbox" id="remember" name="remember" />
                <label for="remember">Remember me</label>
            </div>
            
            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Sign In</button>
            </div>
            
            <div class="form-footer">
                <p>Don't have an account? <a asp-action="Register">Register</a></p>
            </div>
        </form>
    </div>
    
    <div class="login-info">
        <h2>Welcome Back!</h2>
        <p>Sign in to access your ZedCars account and enjoy these benefits:</p>
        
        <div class="benefit-list">
            <div class="benefit-item">
                <div class="benefit-icon text-center"><i class="bi bi-globe"></i></div>
                <div class="benefit-text">
                    <h4>Browse Full Inventory</h4>
                    <p>Access our complete collection of premium vehicles</p>
                </div>
            </div>
            
            <div class="benefit-item">
                <div class="benefit-icon"><i class="bi bi-search"></i></div>
                <div class="benefit-text">
                    <h4>Filter by brand</h4>
                    <p>Create a list of your favorite vehicles for later</p>
                </div>
            </div>
            
            <div class="benefit-item">
                <div class="benefit-icon">ðŸ“…</div>
                <div class="benefit-text">
                    <h4>Schedule Test Drives</h4>
                    <p>Book appointments to test drive your selected vehicles</p>
                </div>
            </div>
            
            <div class="benefit-item">
                <div class="benefit-icon">ðŸš—</div>
                <div class="benefit-text">
                    <h4>Easy Purchase</h4>
                    <p>Purchase Car, Accessories easily as Customer</p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .login-container {
        display: flex;
        justify-content: center;
        padding: 10px 20px;
        gap: 50px;
        background: white;
    }

    .login-form {
        background: #fff;
        padding: 40px 30px;
        width: 640px;
        border-radius: 12px;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.08);
        transition: all 0.3s ease;
    }


        .login-form h1 {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 10px;
            color: #333;
        }

    .subtitle {
        color: #6c757d;
        margin-bottom: 30px;
        font-size: 0.7rem;
    }

    .form-group {
        margin-bottom: 20px;
    }

        .form-group label {
            display: block;
            margin-bottom: 8px;
            font-weight: 600;
            color: #555;
        }

    .form-control {
        width: 100%;
        padding: 12px 14px;
        border: 1px solid #ddd;
        border-radius: 8px;
        font-size: 16px;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: #4b6cb7;
            box-shadow: 0 0 8px rgba(75, 108, 183, 0.3);
            outline: none;
        }

    .remember-me {
        display: flex;
        align-items: center;
        font-size: 0.9rem;
        color: #555;
    }

        .remember-me input {
            margin-right: 10px;
            width: 18px;
            height: 18px;
        }

    .form-actions {
        margin-top: 30px;
    }

    .btn-primary {
        background: linear-gradient(135deg, #4b6cb7, #182848);
        color: white;
        padding: 14px 0;
        border: none;
        border-radius: 50px;
        font-size: 16px;
        font-weight: 700;
        cursor: pointer;
        width: 100%;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 20px rgba(75,108,183,0.3);
        }

    .form-footer {
        margin-top: 25px;
        text-align: center;
        font-size: 0.95rem;
    }

        .form-footer a {
            color: #4b6cb7;
            text-decoration: none;
            font-weight: 600;
            transition: 0.2s ease;
        }

            .form-footer a:hover {
                text-decoration: underline;
            }

    .login-info {
        background: linear-gradient(135deg, #4b6cb7, #182848);
        color: #fff;
        padding: 40px 30px;
        border-radius: 12px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        box-shadow: 0 20px 40px rgba(0,0,0,0.08);
    }

        .login-info h2 {
            font-size: 2rem;
            margin-bottom: 15px;
        }

        .login-info p {
            opacity: 0.9;
            font-size: 1rem;
            margin-bottom: 25px;
        }

    .benefit-list {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .benefit-item {
        display: flex;
        align-items: flex-start;
        gap: 15px;
    }

    .benefit-icon {
        font-size: 24px;
        background: rgba(255,255,255,0.15);
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
        transition: all 0.3s ease;
    }

    .benefit-item:hover .benefit-icon {
        transform: scale(1.1);
        background: rgba(255,255,255,0.25);
    }

    .benefit-text h3 {
        margin: 0 0 5px 0;
        font-weight: 600;
    }

    .benefit-text p {
        margin: 0;
        opacity: 0.85;
        font-size: 0.95rem;
    }

    /* Alerts */
    .alert {
        padding: 15px;
        margin-bottom: 20px;
        border-radius: 6px;
        font-size: 0.95rem;
    }

    .alert-danger {
        background-color: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
    }
</style>
