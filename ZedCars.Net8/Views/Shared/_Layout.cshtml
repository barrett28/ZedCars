<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Favicon -->
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="icon" type="image/svg" href="~/images/car-front.svg" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>
    <link rel="stylesheet" href="~/css/chat-widget.css" /> 
    <title>@ViewData["Title"] - ZedCars</title>
    @RenderSection("Styles", required: false)

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.13.0/gsap.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.13.0/ScrollTrigger.min.js"></script>


<style>
        @@import url('https://fonts.googleapis.com/css2?family=Noto+Sans:ital,wght@0,100..900;1,100..900&display=swap');
        body {
            font-family: "Noto Sans", sans-serif;
            margin: 0;
            padding: 0;
            background-color: #282828;
        }

        .footer {
            margin-top: 20px;
            padding: 14px;
            background: #282828;
            color: white;
            text-align: center;
        }

        .disclaimer-scroll {
            width: 100%;
            overflow: hidden;
            background-color: rgba(255, 255, 0, 0.1);
            padding: 8px 0;
            margin: 10px 0;
            position: relative;
        }

        .scroll-content {
            white-space: nowrap;
            animation: scroll-left 30s linear infinite;
            color: #ffcc00;
            font-weight: bold;
            font-style: italic;
        }

        .disclaimer {
            margin-top: 10px;
            font-size: 14px;
            color: #aaa;
            font-style: italic;
        }

        .content {
            background: #ffffff;
            padding-bottom: 30px;
            /* margin: 20px; */
            /* border-radius: 5px; */
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }

        .navbar-nav .nav-link,
        .navbar-nav .btn-link.nav-link {
            font-family: "Noto Sans", sans-serif; /* match other navbar links */
            font-size: 1rem; /* adjust size if needed */
            height: 35px; /* match navbar height */
            display: flex;
            align-items: center; /* vertical alignment */
        }

        .nav-link:hover{
            color:white;
            transform: translateY(-2px);
            transition: all 0.3s ease;
        }

        .container-fluid a{
            color:white;
        }

        .container-fluid a:hover {
            color: white;
            transform: translateY(-2px);
            transition: all 0.3s ease;
        }

        .logout-btn {
            border: 2px solid transparent; /* default no border */
            border-radius: 5px; /* rounded corners */
            transition: all 0.3s ease;
            color:white;
        }

        .logout-btn:hover {
                border-color: white; /* white border on hover */
                /* background-color: beige; /* subtle hover bg */ 
                transform: translateY(-1px); /* tiny lift for effect */
        }

        .car-image{
            display:flex;
            justify-content: end;
            margin-right:2vw;
            height:100vh;
            align-items:center;
        }

        .car-image img{
            width:auto;
            height:32vh;
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-lg text-light font" style="background-color:#111;">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" href="/">
                <i class="bi bi-car-front-fill me-2"></i>ZedCars
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarNav" aria-controls="navbarNav"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    @* <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Inventory">Inventory</a>
                    </li> *@
                    @* <li class="nav-item">
                        <a class="nav-link" asp-controller="Accessory" asp-action="Index">Accessories</a>
                    </li> *@
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="About">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Contact">Contact</a>
                    </li>
                    @if (User.IsInRole("Customer")){
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="MyPurchases">MyPurchases</a>
                        </li>
                    }
                    @if (User.IsInRole("Customer"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="MyTestDrives">MyTestDrives</a>
                        </li>
                    }

                    @if (User.IsInRole("SuperAdmin") || User.IsInRole("Manager"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Admin" asp-action="Dashboard">Dashboard</a>
                        </li>
                    }

                </ul>

                <ul class="navbar-nav">
                    @if (User?.Identity?.IsAuthenticated == true)
                    {
                        <li class="nav-item d-flex align-items-center me-2">
                            <span class="navbar-text text-white">Welcome, @User.Identity.Name</span>
                        </li>
                        <li class="nav-item">
                            <form asp-controller="Account" asp-action="Logout" method="post" class="d-flex">
                                <button type="submit" class="btn btn-link nav-link text-white logout-btn p-1">
                                    Logout
                                </button>
                            </form>
                        </li>

                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Register">Register</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Login">Sign In</a>
                        </li>
                    }
                </ul>

            </div>
        </div>
    </nav>

    <div class="content">
        @RenderBody()
    </div>
    
    <div class="footer">
        <p>&copy; @DateTime.Now.Year ZedCars. All rights reserved.</p>
        @* <p class="disclaimer">Application for learning purpose only, not for production use.</p> *@
    </div>

    @await Html.PartialAsync("_ChatWidget")

    <script src="~/js/jwt-auth.js"></script>
    
    @if (TempData["AccessToken"] != null)
    {
        <script>
            jwtAuth.storeTokens('@TempData["AccessToken"]', '@TempData["RefreshToken"]');
        </script>
    }
    @if (TempData["ClearTokens"] != null)
    {
        <script>
            jwtAuth.clearTokens();
        </script>
    }


    @RenderSection("Scripts", required: false)

</body>
</html>
