@* Views/Shared/_ChatWidget.cshtml *@
<div id="chat-widget-root" aria-live="polite">
    <form id="__antiForgeryForm" style="display:none">
        @Html.AntiForgeryToken()
    </form>

    <div id="chat-floating" style="position: fixed; bottom: 20px; right: 20px; z-index: 2000; display:flex; flex-direction: column; align-items: flex-end;">

        <!-- Popup -->
        <div id="chat-popup" class="chat-popup card shadow-lg border-0 rounded-3">
            <div class="card-header d-flex justify-content-between align-items-center py-2 px-3">
                <div>
                    <h5 class="font-monospace text-black fw-bold"><i class="bi bi-car-front text-black"></i> ZedBot</h5>
                    <div class="small text-muted">Your Platform Navigator</div>
                </div>
                <div style="cursor:pointer;" id="chat-close" title="Close">
                    <span style="font-size:22px;">&times;</span>
                </div>
            </div>

            <div id="chat-body" class="card-body">
                <div id="chat-messages" class="d-flex flex-column gap-2"></div>
            </div>

            <div class="card-footer p-2">
                <div id="chat-quick" class="mt-3 d-flex flex-wrap gap-2"></div>
            </div>
        </div>

        <!-- Floating button -->
        <button id="chat-toggle" class="btn rounded-circle shadow-lg d-flex align-items-center justify-content-center">
            <i class="bi bi-chat-dots-fill text-white" style="font-size:28px;"></i>
        </button>
    </div>
</div>

<style>
    /* Popup styling */
    .chat-popup {
        width: 360px;
        max-height: 500px;
        display: none;
        flex-direction: column;
        overflow: hidden;
        background: #ffffff;
        border-radius: 12px;
        transform: scale(0.8);
        opacity: 0;
        transition: all 0.4s ease;
    }

        .chat-popup.cw-open {
            display: flex;
            transform: scale(1);
            opacity: 1;
        }

        .chat-popup.cw-closing {
            transform: scale(0.8);
            opacity: 0;
        }

    /* Chat bubbles */
    .chat-bubble-user {
        align-self: flex-end;
        background: #0d6efd;
        color: white;
        padding: 10px 14px;
        border-radius: 18px 18px 4px 18px;
        max-width: 75%;
        font-size: 14px;
        word-wrap: break-word;
        animation: fadeIn 0.3s ease;
    }

    .chat-bubble-bot {
        align-self: flex-start;
        background: #f1f3f5;
        color: #212529;
        padding: 10px 14px;
        border-radius: 18px 18px 18px 4px;
        max-width: 75%;
        font-size: 14px;
        word-wrap: break-word;
        animation: fadeIn 0.3s ease;
    }

    .chat-typing {
        font-style: italic;
        color: #6c757d;
        font-size: 13px;
    }

    /* Quick buttons */
    .chat-pil {
        background: #f8f9fa;
        border: 1px solid #dee2e6;
        border-radius: 20px;
        padding: 6px 14px;
        font-size: 13px;
        cursor: pointer;
        transition: all .2s ease;
    }

    .chat-pil:hover {
            background: #0d6efd;
            color: #fff;
            border-color: #0d6efd;
    }

    /* Floating button */
    #chat-toggle {
        width: 60px;
        height: 60px;
        background-color: #212529;
        border: none;
        transition: all 0.3s ease;
    }

        #chat-toggle:hover {
            transform: scale(1.1);
        }
</style>

<script>
    (function() {
        const popup = document.getElementById('chat-popup');
        const toggleBtn = document.getElementById('chat-toggle');
        const closeBtn = document.getElementById('chat-close');
        const messagesEl = document.getElementById('chat-messages');
        const quickEl = document.getElementById('chat-quick');

        let manuallyClosed = localStorage.getItem('chatManuallyClosed') === 'true';

        // Show popup automatically (if not manually closed)
        window.addEventListener('load', () => {
            if (!manuallyClosed) {
                setTimeout(() => popup.classList.add('cw-open'), 500);
            }
        });

        // Toggle popup
        toggleBtn.addEventListener('click', () => {
            if (!popup.classList.contains('cw-open')) {
                popup.classList.remove('cw-closing');
                popup.classList.add('cw-open');
                manuallyClosed = false;
                localStorage.setItem('chatManuallyClosed', 'false');
            } else {
                closePopup();
            }
        });

        // Close popup
        closeBtn.addEventListener('click', closePopup);

        function closePopup() {
            if (popup.classList.contains('cw-open')) {
                popup.classList.remove('cw-open');
                popup.classList.add('cw-closing');
                manuallyClosed = true;
                localStorage.setItem('chatManuallyClosed', 'true');
                setTimeout(() => popup.classList.remove('cw-closing'), 400);
            }
        }

        // Append messages
        function appendMessage(html, cls) {
            const wrap = document.createElement('div');
            wrap.className = cls;
            wrap.innerHTML = html;
            messagesEl.appendChild(wrap);
            messagesEl.scrollTop = messagesEl.scrollHeight;
        }

        // Quick buttons
        function setQuickButtons(btns) {
            quickEl.innerHTML = '';
            btns.forEach(b => {
                const btn = document.createElement('button');
                btn.type = 'button';
                btn.className = 'chat-pil btn btn-sm';
                btn.textContent = b.label;
                btn.addEventListener('click', () => {
                    appendMessage(`<div class="chat-user-label">${b.label}</div>`, 'chat-bubble-user');
                    if (b.action && (b.action.startsWith('/') || b.action.startsWith('http'))) {
                        setTimeout(() => window.location.href = b.action, 250);
                    }
                });
                quickEl.appendChild(btn);
            });
        }

        // Show welcome message
        function showWelcome() {
            appendMessage("<strong>Hi — I'm ZedBot 👋</strong><br/>I can help you navigate quickly.", 'chat-bubble-bot');
            setQuickButtons([
                { label: 'Inventory', action: '/Home/Inventory' },
                { label: 'Accessories', action: '/Home/PurchaseAccessory' },
                { label: 'Create Vehicle', action: '/Admin/AddVehicle' },
                { label: 'Home', action: '/Home/Index' },
                { label: 'About', action: '/Home/About' }
            ]);
        }

        showWelcome();
    })();
</script>

