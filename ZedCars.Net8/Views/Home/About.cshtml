@{
    ViewData["Title"] = "About";
}

<div class="container p-4">
    <div class="row">
        <div class="col-md-10 mx-auto">
            <h1 class="mb-4">@ViewData["Title"] ZedCars</h1>
            
            <div class="row">
                <div class="col-md-8">
                    <p class="lead">ZedCars is a premier vehicle inventory management system designed to help dealerships manage their vehicle inventory efficiently.</p>
                    
                    <div class="card mb-4">
                        <div class="card-body">
                            <h3 class="card-title"><i class="bi bi-bullseye"></i> Our Mission</h3>
                            <p class="card-text">To provide the best vehicle inventory management experience for both dealers and customers, streamlining operations and enhancing customer satisfaction.</p>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h3 class="card-title"><i class="bi bi-star-fill"></i> Key Features</h3>
                            <ul class="list-unstyled">
                                <li class="mb-2"><i class="bi bi-check-circle-fill text-success"></i> Comprehensive vehicle inventory management</li>
                                <li class="mb-2"><i class="bi bi-check-circle-fill text-success"></i> User-friendly interface</li>
                                <li class="mb-2"><i class="bi bi-check-circle-fill text-success"></i> Real-time stock tracking</li>
                                <li class="mb-2"><i class="bi bi-check-circle-fill text-success"></i> Detailed vehicle information</li>
                                <li class="mb-2"><i class="bi bi-check-circle-fill text-success"></i> Advanced search and filtering</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="row mt-2">
                <div class="col-md-4">
                    <div class="text-center p-3">
                        <i class="bi bi-people-fill display-4 text-primary"></i>
                        <h5 class="mt-2">Customer Focused</h5>
                        <p class="text-muted">Dedicated to providing exceptional service</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="text-center p-3">
                        <i class="bi bi-shield-check display-4 text-success"></i>
                        <h5 class="mt-2">Reliable & Secure</h5>
                        <p class="text-muted">Built with security and reliability in mind</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="text-center p-3">
                        <i class="bi bi-lightning-fill display-4 text-warning"></i>
                        <h5 class="mt-2">Fast & Efficient</h5>
                        <p class="text-muted">Optimized for speed and performance</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
